sub std_pdb_deprecated {
    if (@_) {
        $blurb = $help = "Deprecated: Use '@_' instead.";
        $deprecated = "@_";
    } else {
        $blurb = $help = "Deprecated: There is no replacement for this procedure.";
        $deprecated = "NONE";
    }
    $author = $copyright = $date = '';
}

