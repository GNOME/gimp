# Boilerplate PDB stuff

sub std_pdb_misc {
    $author = $copyright = 'Spencer Kimball & Peter Mattis';
    $date   = '1995-1996';
}

sub contrib_pdb_misc {
    my $a = shift;
    my $e = shift;
    my $d = shift;
    my $s = shift;

    if ($e eq '') {
        $author = "$a";
    } else {
	$author = "$a <$e>";
    }

    $copyright = "$a";
    $date = "$d";

    if ($s) {
	$since = "$s";
    }
}

