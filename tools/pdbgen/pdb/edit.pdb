    );

    @outargs = (
	{ name => 'non_empty', type => 'boolean', init => 1,
	  desc => 'TRUE if the copy was successful, FALSE if the selection contained only transparent pixels' }
    );

    &invoke('non_empty = gimp_edit_copy (image, drawable, context) != NULL');
}

