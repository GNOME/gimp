    );

    %invoke = (
        code => <<'CODE'
{
  GimpGradient        *gradient;
  GimpGradientSegment *start_seg;
  GimpGradientSegment *end_seg;

  gradient = gradient_get_range (gimp, name, start_segment, end_segment,
