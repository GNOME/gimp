@procs = qw(procedural_db_temp_name
            procedural_db_dump
            procedural_db_query
            procedural_db_proc_exists
            procedural_db_proc_info
            procedural_db_proc_arg procedural_db_proc_val
	    procedural_db_get_data procedural_db_get_data_size
