+
+    command = [os.path.join(install_datadir, 'crossroad/scripts/crossroad-mingw-install.py'),
+               '-a', name, '--deps']
+    if src:
+        command += ['--src']
+    command += list(packages)
+    return subprocess.call(command, shell=False)
